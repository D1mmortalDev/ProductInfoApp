<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey5"
    tools:context=".ProductList">

    <TextView
        android:id="@+id/txtProductDisplay"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="@string/app_display"
        android:textAlignment="center"
        android:textColor="@color/merlot"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProdList"
        android:layout_width="395dp"
        android:layout_height="669dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtProductDisplay"
        app:layout_constraintStart_toStartOf="@+id/txtProductDisplay"
        app:layout_constraintTop_toBottomOf="@+id/txtProductDisplay"
        app:layout_constraintVertical_bias="0.733"
        tools:listitem="@layout/product_item_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>